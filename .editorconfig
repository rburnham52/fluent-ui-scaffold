# top-most EditorConfig file
root = true

# C# files
[*.cs]
indent_style = space
indent_size = 4
insert_final_newline = true
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

# C# code style

# Organize usings
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# File header - temporarily disabled to keep build working
# file_header_template = "// Copyright (c) FluentUIScaffold. All rights reserved."

# Naming conventions - Use default C# conventions
# Parameters should be camelCase (this is the default C# convention)

# Only override what matters:
# dotnet_diagnostic.CA1822.severity = none   # Suppress "Mark members as static"
# dotnet_diagnostic.CA1031.severity = none   # Suppress "Do not catch general exception types"

# End of file 