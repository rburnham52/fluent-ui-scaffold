# dotnet-format

[rule]
name = "dotnet format on C# changes and before build"
description = "Run 'dotnet format' on all C# code changes after and before running a build. Ensures code is formatted according to .NET conventions."
trigger = ["after-change"]
include = ["*.cs", "*.csproj", "*.sln"]
command = "dotnet format"

[docs]
url = "https://learn.microsoft.com/en-us/dotnet/core/cli/dotnet-format"
summary = "This rule ensures that all C# code is automatically formatted using 'dotnet format' after making changes. This keeps code consistently formatted throughout development."
description:
globs:
alwaysApply: false
---
